@model Ashion.Models.InvoiceM


<section class="checkout spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h6 class="coupon__link">
					<span class="icon_tag_alt"></span> <a href="#">Have a coupon?</a> Click
					here to enter your code.
				</h6>
			</div>
		</div>

		@using (Html.BeginForm())
		{
			@Html.AntiForgeryToken()

		<div class="row">
			<div class="col-lg-8">
				<h5>Billing detail</h5>
				<div class="row">
					<div class="col-lg-6 col-md-6 col-sm-6">
						<div class="checkout__form__input">
							<p>First Name <span>*</span></p>
							@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="col-lg-6 col-md-6 col-sm-6">
						<div class="checkout__form__input">
							<p>Last Name <span>*</span></p>
							@Html.EditorFor(model => model.LastN, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.LastN, "", new { @class = "text-danger" })
						</div>

					</div>

					<div class="col-lg-4 col-md-6 col-sm-6 mt-2">
						<div class="checkout__form__input">
							<p>Country <span>*</span></p>
							@Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
						</div>
						</div>
						<div class="col-lg-4 col-md-6 col-sm-6 mt-2">

							<div class="checkout__form__input">
								<p>State <span>*</span></p>
								@Html.EditorFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="col-lg-4 col-md-6 col-sm-6 mt-2 mt-2">
							<div class="checkout__form__input">
								<p>Town/City <span>*</span></p>
								@Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
							</div>
							
						</div>


						<div class="col-lg-12 mt-2">


							<div class="checkout__form__input">
								<p>Address <span>*</span></p>
								@Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
							</div>




						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 mt-2">
							<div class="checkout__form__input">
								<p>Phone <span>*</span></p>
								@Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
							</div>
						</div>
						<div class="col-lg-6 col-md-6 col-sm-6 mt-2">
							<div class="checkout__form__input">
								<p>Postcode/Zip <span>*</span></p>
								@Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { @class = "form-control" } })
								@Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
							</div>
						</div>

					</div>
				</div>
			<div class="col-lg-4">
				<div class="checkout__order">
					<h5>Your order</h5>
					<div class="checkout__order__product">
						<ul>
							<li>
								<span class="top__text">Product</span>
								<span class="top__text__right">Total</span>
							</li>
							@if (@Session["cart"] != null)
							{
								foreach (var p in Session["cart"] as List<Ashion.Models.Cart>)
								{
									<li>@p.proName <span>$ @p.bill</span></li>
								}
							}
						</ul>
					</div>
					<div class="checkout__order__total">
						<ul>

							<li>Total <span>$ @Session["total"]</span></li>
						</ul>
					</div>

					<div class="checkout__order__widget">
						<label>
							@Html.RadioButtonFor(m => m.SelectedPaymentMethod, "UPI")
							UPI
							<span class="checkmark"></span>
						</label>

						<label>
							@Html.RadioButtonFor(m => m.SelectedPaymentMethod, "COD")
							Cash On Delivery
							<span class="checkmark"></span>
						</label>

					</div>
					<button type="submit" class="site-btn">Place oder</button>
				</div>
			</div>
		</div>
				

		}
		</div>
</section>