@model IEnumerable<Ashion.Models.ProductList>

@{
	ViewBag.Title = "ProductDisplay";
}


<div class="breadcrumb-option">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcrumb__links">
					<a href="./index.html"><i class="fa fa-home"></i> Home</a>
					<span>Shop</span>
				</div>
			</div>
		</div>
	</div>
</div>



<section class="shop spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-3 col-md-3">
				<div class="shop__sidebar">
					<div class="sidebar__categories">
						<div class="section-title">
							<h4>Categories</h4>
						</div>
						<div class="categories__accordion">
							<div class="accordion" id="accordionExample">
								<div class="card">
									<div class="card-heading active">
										<a data-toggle="collapse" data-target="#collapseOne">Women</a>
									</div>
									<div id="collapseOne" class="collapse show" data-parent="#accordionExample">
										<div class="card-body">
											<ul>

												<li><a href="@Url.Action("Index", "Category", new { id = 10 })">Coats</a></li>
												<li><a href="@Url.Action("Index", "Category", new { id = 11 })">Jacket</a></li>
												<li><a href="@Url.Action("Index", "Category", new { id = 12 })">Dresss</a></li>
												<li><a href="@Url.Action("Index", "Category", new { id = 14 })">Shirts</a></li>
												<li><a href="@Url.Action("Index", "Category", new { id = 15 })">Jeans</a></li>
											</ul>


										</div>
									</div>
								</div>




							</div>
						</div>
					</div>

				</div>
			</div>
			<div class="col-lg-9 col-md-9">
				<div class="row">
					@foreach (var item in Model)
					{
						<div class="col-lg-4 col-md-6">

							<div class="product__item">
								<div class="product__item__pic set-bg" data-setbg="img/shop/shop-1.jpg">
									<div></div>
									<a href="@Url.Action("ProductDetails","Cart",new {id=item.ProId})">
										<img src="@Url.Content(item.Image)" class="card-img-top" id="imgepath" alt="Product 1">
									</a>

									<ul class="product__hover">
										<li><a href="@Url.Content(item.Image)" class="image-popup"><span class="arrow_expand"></span></a></li>
										<li><a href="#"><span class="icon_heart_alt"></span></a></li>
										<li><a href="@Url.Action("ProductDetails","Cart",new {id=item.ProId})"><span class="icon_bag_alt"></span></a></li>
									</ul>
									<div class="label new">New</div>

								</div>

								<div class="product__item__text">

									<h5 class="card-title">@item.Name</h5>
									<div class="product__price">$ @item.Unit</div>

								</div>

							</div>


						</div>
					}

				</div>
			</div>
		</div>
	</div>
</section>