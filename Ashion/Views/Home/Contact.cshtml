@model Ashion.Models.Query



<section class="contact spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-6 col-md-6">
				<div class="contact__content">
					<div class="contact__address">
						<h5>Contact info</h5>
						<ul>
							<li>
								<h6><i class="fa fa-map-marker"></i> Address</h6>
								<p>160 Pennsylvania Ave NW, Washington, Castle, PA 16101-5161</p>
							</li>
							<li>
								<h6><i class="fa fa-phone"></i> Phone</h6>
								<p><span>125-711-811</span><span>125-668-886</span></p>
							</li>
							<li>
								<h6><i class="fa fa-headphones"></i> Support</h6>
								<p>Support.photography@gmail.com</p>
							</li>
						</ul>
					</div>
					<div class="contact__form">
						<h5>SEND MESSAGE</h5>


						@using (Html.BeginForm())
						{
							@Html.AntiForgeryToken()

							
					<div class="col-lg-10 col-md-6 col-sm-6 mt-2">
						<div class="checkout__form__input">
							<p>Name <span>*</span></p>
							@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
						</div>

						<div class="checkout__form__input">
							<p>Email Id <span>*</span></p>
							@Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
							@Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
						</div>

						<div class="checkout__form__input">
							<p>Message <span>*</span></p>
							@Html.EditorFor(model => model.Query1, new { htmlAttributes = new { @class = "form-control query" } })
							@Html.ValidationMessageFor(model => model.Query1, "", new { @class = "text-danger " })
						</div>

					</div>
				<button type="submit" class="site-btn">Send Message</button>
							

						}


					</div>
				</div>
			</div>
			<div class="col-lg-6 col-md-6">
				<div class="contact__map">
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d48158.305462977965!2d-74.13283844036356!3d41.02757295168286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c2e440473470d7%3A0xcaf503ca2ee57958!2sSaddle%20River%2C%20NJ%2007458%2C%20USA!5e0!3m2!1sen!2sbd!4v1575917275626!5m2!1sen!2sbd" height="780" style="border:0" allowfullscreen="">
					</iframe>
				</div>
			</div>
		</div>
	</div>
</section>