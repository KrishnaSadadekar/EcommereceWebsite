@model Ashion.Models.UserD

<section class="vh-100" style="background-color:lightblue">
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col col-xl-10">
				<div class="card" style="border-radius: 1rem;">
					<div class="row g-0">
						<div class="col-lg-5 d-none d-md-block ">
							<img src="~/img/product/Denim/LPoster.jpg"
								 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height:500px" />
						</div>
						<div class="col-md-6 col-lg-7 d-flex align-items-center">
							<div class="card-body p-4 p-lg-5 text-black">




								@using (Html.BeginForm())
								{
									@Html.AntiForgeryToken()



									<div class="d-flex align-items-center mb-3 pb-1">
										<img src="~/img/logo.png" />

									</div>

									<h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

									<div class="form-outline mb-4">
										@Html.LabelFor(model => model.EmailId, htmlAttributes: new { @class = "form-label" })

										@Html.EditorFor(model => model.EmailId, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.EmailId, "", new { @class = "text-danger" })
									</div>

									<div class="form-outline mb-4">
										<label class="form-label">Password</label>
										@Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
										@Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
									</div>


									<div class="pt-1 mb-4">
										<button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
									</div>

									<h6 style="color:red" class="row mt-4 justify-content-sm-start">@TempData["msg"]</h6>

									<p>@Html.ActionLink("Register Here", "SignUp", "UserAccount", new { area = "" }, new { @class = "navbar-brand" })</p>
									<a href="#!" class="small text-muted">Terms of use.</a>
									<a href="#!" class="small text-muted">Privacy policy</a>
								}


							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>