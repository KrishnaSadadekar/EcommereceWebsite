@using Ashion.Models;
@{
	ViewBag.Title = "MangeProduct";
	Layout = "~/Views/Shared/_LayoutPage1.cshtml";
	
}
<div class="container">
	<h3 class="mt-4 d-flex justify-content-center">Manage Products</h3>


	<table class="table mt-3 border rounded">
		<tr class="bg-info">
			<th>Product Name</th>
			<th>Price</th>
			<th>Action</th>
		</tr>

		@foreach (ProductList product in ViewBag.listproducts)
		{
			<tr>
				<td>@product.Name</td>
				<td>@product.Unit</td>
				<td>
					@Html.ActionLink("Edit", "Edit", "UserAccount", new { id = product.ProId }, new { @class = "btn btn-warning" })
					@Html.ActionLink("Delete", "Delete", "UserAccount", new { id = product.ProId }, new { @class = "btn btn-danger" })
				</td>
			</tr>
		}
	</table>
</div>
